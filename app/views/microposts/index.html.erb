<div class="container center">
  <p id="notice"><%= notice %></p>

  <h1>Microposts</h1>

  <table class="calendar-table center">
    <thead>
      <tr>
        <th>Sección</th>
        <th>Contenido</th>
        <th>Autor</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @microposts.each do |micropost| %>
        <tr>
          <td><%= micropost.section %></td>
          <td><%= micropost.content %></td>
          <td><%= micropost.user.name %></td>
          <td><%= link_to 'Show', micropost %></td>
          <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
          <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: '¿Confirma la eliminación del aviso?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Crear Aviso', new_micropost_path %>

</div>