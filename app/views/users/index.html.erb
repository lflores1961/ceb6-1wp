<div class="container center">
    <p id="notice"><%= notice %></p>

    <h1>Usuarios</h1>

    <table class="calendar-table center">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: '¿Confirma la eliminación del usuario?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Crear Usuario', new_user_path %>
</div>

